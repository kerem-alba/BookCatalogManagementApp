@model BookCatalogManagementApp.Dtos.BookDto

@{
    ViewData["Title"] = "Kitap Detayı";
}

<h2>Kitap Detayı</h2>
<hr />


<dl class="row">
    <dt class="col-sm-2">Başlık</dt>
    <dd class="col-sm-10">@Model.Title</dd>

    <dt class="col-sm-2">Yazar</dt>
    <dd class="col-sm-10">@Model.Author</dd>

    <dt class="col-sm-2">Tür</dt>
    <dd class="col-sm-10">@Model.Genre</dd>

    <dt class="col-sm-2">Sayfa Sayısı</dt>
    <dd class="col-sm-10">@Model.PageCount</dd>
</dl>

<div class="mt-3">
    <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-warning">Düzenle</a>
    <a asp-action="Index" class="btn btn-secondary ms-2">Geri</a>
</div>
